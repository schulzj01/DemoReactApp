/**
 *  Typescript specific settings when running the application in the node environment
 *
 */
{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "jsx": "react-jsx"
  },
  "include": ["vite.config.ts"]
}
